<h1 class='fs-3 fw-light'>Create new account</h1>

<form id="createUserForm" {{on 'submit' this.createNewUser}}>
  <Form::Field::Email
    @value={{this.formData.email}}
    @clearCustomValidation={{this.clearCustomValidation}}
  />

  <Form::Field::Password
    @value={{this.formData.password}}
    @clearCustomValidation={{this.clearCustomValidation}}
  />

  <Form::Field::Password
    @value={{this.formData.confirmPassword}}
    @clearCustomValidation={{this.clearCustomValidation}}
    @placeholder='Confirm password'
    @name='confirm-password'
  />

  {{#if this.formSubmitMsg}}
    <div class="alert alert-danger d-flex align-items-center" role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
      <div>
        {{this.formSubmitMsg}}
      </div>
      <button {{on 'click' this.closeFormSubmitMsg}} type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {{/if}}

  <div class='sign-in-form-submit-section'>
    <button type='submit' class='sign-in-btn'>
      {{#if this.showAPILoader}}
        <div class="spinner-border spinner-border-sm" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      {{/if}}
      Create new account
    </button>

    <Form::GoogleAuth @btnText='Sign up via Google' />

    <div class='sign-in-other-options'>
      <button
        type='button'
        class='btn btn-link sign-in-btn-link'
        {{on 'click' @toggleSignInForm}}
      >
        <img
          class='sign-in-btn-arrow'
          src='/images/left-arrow.png'
          alt='right-arrow'
        />
        Back to login
      </button>
    </div>
  </div>
</form>