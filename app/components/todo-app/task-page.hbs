<div
  class='task-page-wrapper bg-light d-flex justify-content-center align-items-center flex-column'
>
  <div class='tp-container'>
    <LinkTo @route='tasks' class='btn btn-primary mb-2'>Tasks page</LinkTo>
    <div class='container-fluid shadow rounded-3 bg-white p-5 bg-white h-100'>
      <div class='d-flex align-items-center'>
        {{#if this.showTitleEditor}}
          {{! template-lint-disable require-input-label }}
          <Input
            @type='text'
            @value={{this.taskData.task.value}}
            class='form-control'
            id='titleEditor'
          />
          {{! template-lint-disable no-invalid-interactive }}
          <span
            class='pe-auto mx-1'
            {{on 'click' this.saveTitle}}
          >
            <svg class='icon icon__success'>
              <use
                xlink:href='/images/bootstrap-icons.svg#check-circle-fill'
              ></use>
            </svg>
          </span>
          <span
            class='pe-auto mx-1'
            {{on 'click' this.toggleTitleEditor}}
          >
            <svg class='icon icon__danger'>
              <use xlink:href='/images/bootstrap-icons.svg#x-circle-fill'></use>
            </svg>
          </span>
        {{else}}
          <h1 class='display-5 fw-bold'>
            {{#if this.taskData}}
              {{this.taskData.task.value}}
            {{else}}
              <div class='title-loader'></div>
            {{/if}}
          </h1>

          <span
            class='pe-auto mx-1'
            {{on 'click' this.openTitleEditor}}
          >
            <svg class='bi' width='32' height='32' fill='currentColor'>
              <use xlink:href='/images/bootstrap-icons.svg#pencil-fill'></use>
            </svg>
          </span>
        {{/if}}
      </div>
      <div class='py-3'>
        <button
          type='button'
          class='btn
            {{if this.showDescEditor "btn-primary" "btn-outline-primary"}}'
          {{on 'click' this.toggleDescEditor}}
        >Description</button>
        <button
          type='button'
          class='btn
            {{if this.showDescEditor "btn-outline-primary" "btn-primary"}}'
          {{on 'click' this.toggleDescEditor}}
        >Preview</button>
      </div>
      {{#if this.showDescEditor}}
        <form {{on 'submit' this.updateDesc}}>
          <Textarea
            name=''
            id=''
            rows='5'
            class='border w-100 p-3'
            @value={{this.taskData.task.description}}
            required
          />
          <div class='py-3'>
            <button type='submit' class='btn btn-primary'>Save</button>
            <button type='button' class='btn btn-secondary'>Cancel</button>
          </div>
        </form>
      {{else}}
        <p class='col-md-8 fs-4'>
          {{this.taskData.task.description}}
        </p>
      {{/if}}
      {{! <button class='btn btn-primary btn-lg' type='button'>Example button</button> }}
    </div>
  </div>
</div>